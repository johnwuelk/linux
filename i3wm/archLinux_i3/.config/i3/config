#Needed for i3-gaps
set $DEFAULT_GAPS 10
set $OUTER_GAPS 0
#set $TOP 55
set $TOP 0
set $BOTTOM 0
#set $BOTTOM 0
gaps inner $DEFAULT_GAPS 
gaps outer $OUTER_GAPS 

#used for some specific polybar theme
gaps top $TOP
gaps bottom $BOTTOM

bindsym $mod+Mod1+h 			gaps outer current plus $DEFAULT_GAPS
bindsym $mod+Mod1+l			gaps outer current minus $DEFAULT_GAPS
bindsym $mod+Mod1+r			gaps outer current set $OUTER_GAPS; gaps inner current set $DEFAULT_GAPS; gaps top current set $TOP; gaps bottom current set $BOTTOM
